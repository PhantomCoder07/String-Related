#include <stdio.h>
#include <string.h>
int substr (char *str, char *sub)
{
    int n=strlen(str);
    int m=strlen(sub);
    int i,j;
    if (m==0)
        return 1;
    for (i=0; i<n; i++)
    {
        for (j=0; j<m; j++)
        {
            if (str[i+j]!=sub[j])
                break;
        }
        if (j==m)
            return 1;
    }
    return 0;
}
int main()
{
    char str[100],sub[50];
    printf("Enter main string: ");
    gets(str);
    printf("Enter sub-string : ");
    gets(sub);
    if (substr(str,sub))
        printf("Substring found!\n");
    else
        printf("Substring not found!\n");
    return 0;
}
