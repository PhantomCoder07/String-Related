#include <stdio.h>
#include <string.h>
int main()
{
    char str[100],ch;
    int i,l,a=0,d=0,s=0;
    printf ("Enter the string: ");
    gets(str);
    l= strlen(str);
    for(i=0; i<l; i++)
    {
        ch=str[i];
        if((ch>='a' && ch<='z') || (ch>='A' && ch<='Z'))
            a++;
        else if (ch>='0' && ch<='9')
            d++;
        else
            s++;
    }
    printf ("Total alphabet: %d\n",a);
    printf ("Total digit: %d\n",d);
    printf ("Total special character: %d\n",s);
    return 0;
}
