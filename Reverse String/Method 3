#include <stdio.h>
#include <string.h>
int reverse (char s[], int n)
{
    if (n==0)
        return 1;
    printf("%c",s[n-1]);
    return reverse(s,n-1);
}
int main()
{
    char str[100];
    printf ("Enter the string: ");
    gets(str);
    int l=strlen(str);
    printf("The reverse string: ");
    reverse(str,l);
    return 0;
}
