#include <stdio.h>
#include <string.h>
int main()
{
    char str[100],ch;
    int i,l,s=0;
    printf ("Enter the string: ");
    gets(str);
    l=strlen(str);
    for (i=0; i<l; i++)
    {
        ch=str[i];
        if (ch==' ')
            s++;
    }
    printf ("Total number of space in the string: %d\n",s);
    return 0;
}
