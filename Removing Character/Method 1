#include <stdio.h>
#include <ctype.h>
int main()
{
    char str[100];
    printf ("Enter the string: ");
    gets (str);
    char ch;
    printf("Enter the character that will be removed: ");
    scanf("%c",&ch);
    ch=tolower(ch);
    printf("The string after removing that character: ");
    for (int i=0; str[i]!='\0'; i++)
    {
        char st=tolower(str[i]);
        if (st!=ch)
            printf("%c",str[i]);
    }
    return 0;
}
