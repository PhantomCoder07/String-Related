#include <stdio.h>
#include <string.h>
int main()
{
    char str[100];
    printf ("Enter the string: ");
    gets (str);
    int l=strlen(str);
    int n;
    printf ("Enter the extraction position: ");
    scanf ("%d",&n);
    if (n<1 || n>l)
        printf("Invalid position.\n");
    else
        printf("Extracting from position %d: %s\n",n,&str[n-1]);
    return 0;
}
