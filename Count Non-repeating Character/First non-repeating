#include <stdio.h>
#include <string.h>
int main()
{
    char str[100];
    printf ("Enter the string: ");
    gets(str);
    int l=strlen(str);
    int ans=0;
    printf ("First non-repeating character: ");
    for (int i=0; i<l; i++)
    {
        ans=0;
        for (int j=0; j<l; j++)
        {
            if (str[i]==str[j] && j!=i)
                ans=1;
        }
        if (ans==0)
        {
            printf ("%c\n",str[i]);
            break;
        }
    }
    return 0;
}
