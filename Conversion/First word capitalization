#include <stdio.h>
#include <string.h>
#include <ctype.h>
int main()
{
    char str[1000];
    printf("Enter the string: ");
    gets(str);
    int n=strlen(str);
    for (int i=0; i<n; i++)
    {
        if (i==0)
            str[i]=toupper(str[i]);
        else if (str[i]=='.' && i+1!=n)
        {
            if (str[i+1]==' ')
                str[i+2]=toupper(str[i+2]);
            else
                str[i+1]=toupper(str[i+1]);
        }
        else
            continue;
    }
    printf("After conversion: %s\n",str);
    return 0;
}
